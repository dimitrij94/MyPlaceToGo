<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dmitrij.myplacetogo.PlaceProphile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Starbux"
        android:id="@+id/company_name"
        android:layout_alignTop="@+id/placeImages"
        android:layout_alignRight="@+id/compani_ratings"
        android:layout_alignEnd="@+id/compani_ratings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="kaffe"
        android:id="@+id/company_specialiti"
        android:layout_below="@+id/company_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Best koffe in the world"
        android:id="@+id/company_description"
        android:layout_below="@+id/company_specialiti"
        android:layout_alignLeft="@+id/company_name"
        android:layout_alignStart="@+id/company_name"
        android:paddingRight="25dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/compani_ratings"
        android:layout_below="@+id/placeImages"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/placeImages"
        android:src="#ff4a9dff"
        android:minHeight="75dp"
        android:minWidth="150dp"
        android:maxWidth="150dp"
        android:maxHeight="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_below="@+id/compani_ratings"
        android:layout_toRightOf="@+id/company_description"
        android:layout_toEndOf="@+id/company_description"
        android:src="#ff0016ff"
        android:minHeight="15dp"
        android:minWidth="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/company_address"
        android:layout_alignBottom="@+id/placeImages"
        android:layout_alignLeft="@+id/company_description"
        android:layout_alignStart="@+id/company_description" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menuListView"
        android:layout_below="@+id/compani_ratings">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/place_menu_list" />
    </LinearLayout>

</RelativeLayout>
